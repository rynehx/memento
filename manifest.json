{
  "manifest_version": 2,

  "name": "Memento",
  "description": "take screen shots and upload to pinterest",
  "version": "0.1",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "click to activate capture tool"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "https://ajax.googleapis.com/"
  ]
}
